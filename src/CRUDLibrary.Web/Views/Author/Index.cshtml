@model CRUDLibrary.Domain.Models.AllAuthorsResponse

@{
    ViewData["Title"] = "Index";
}

<h1>Authors</h1>
<div id="ErrorMessages" class="alert-message-div">
        @if(Model.ERROR_MESSAGES.Count() > 0){ 
            @Html.Raw(Model.DisplayErrorMessages());
        }
    </div>
    <div id="SuccessMessages" class="alert-message-div alert-success">
        @if (Model.SUCCESS_MESSAGES.Count() > 0)
        {
            @Html.Raw(Model.DisplaySuccessMessages());
        }
    </div>
<p>
    <a class="btn btn-success" asp-action="Add">Add New</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>
            Name
        </th>
        <th>
            Born
        </th>
        <th>
            Died
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.AUTHORS) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NAME)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BORN)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DIED)
            </td>
            <td>
                <a class="btn btn-sm btn-warning" asp-action="Update" asp-route-id="@item.ID">Update</a> |
                <a class="btn btn-sm btn-primary" asp-action="View" asp-route-id="@item.ID">Details</a> |
                <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
<script>
    $(document).ready(function() {
        var message = sessionStorage.getItem("MESSAGE");
        if (message !== null) {
            // Display your message here for example you can create an alert div and fill it with this alert message
            $('#SuccessMessages').text(message).show();
            // after displaying the message, remove it from storage
            sessionStorage.removeItem("MESSAGE");
        }
    });
</script>
